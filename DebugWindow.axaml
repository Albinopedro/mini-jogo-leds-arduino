<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="miniJogo.DebugWindow"
        Title="ðŸ”§ Debug Console - Mini Jogo LEDs"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#1A202C">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0" Background="#E53E3E" Padding="15">
      <TextBlock Text="ðŸ”§ Console de Debug" 
                 FontSize="18" 
                 FontWeight="Bold" 
                 Foreground="White"
                 HorizontalAlignment="Center"/>
    </Border>

    <!-- Debug Messages -->
    <Border Grid.Row="1" Background="#2D3748" Margin="10" CornerRadius="8">
      <ScrollViewer x:Name="DebugScrollViewer" 
                    VerticalScrollBarVisibility="Auto"
                    Padding="15">
        <TextBlock x:Name="DebugTextBlock" 
                   Text="Aguardando mensagens de debug..."
                   TextWrapping="Wrap" 
                   Foreground="#E2E8F0"
                   FontFamily="Consolas"
                   FontSize="12"
                   LineHeight="18"/>
      </ScrollViewer>
    </Border>

    <!-- Controls -->
    <Border Grid.Row="2" Background="#2D3748" Padding="15">
      <StackPanel Orientation="Horizontal" 
                  HorizontalAlignment="Center" 
                  Spacing="15">
        <Button x:Name="ClearButton" 
                Content="ðŸ—‘ï¸ Limpar Console" 
                Click="ClearButton_Click"
                Background="#E53E3E"
                Foreground="White"
                Padding="10,5"
                CornerRadius="5"
                FontWeight="Medium"/>
        
        <Button x:Name="SaveButton" 
                Content="ðŸ’¾ Salvar Log" 
                Click="SaveButton_Click"
                Background="#38A169"
                Foreground="White"
                Padding="10,5"
                CornerRadius="5"
                FontWeight="Medium"/>
        
        <Button x:Name="CloseButton" 
                Content="âŒ Fechar" 
                Click="CloseButton_Click"
                Background="#3182CE"
                Foreground="White"
                Padding="10,5"
                CornerRadius="5"
                FontWeight="Medium"/>
      </StackPanel>
    </Border>

  </Grid>
</Window>