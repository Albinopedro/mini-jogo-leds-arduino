<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="miniJogo.DebugWindow"
        Title="ðŸ”§ Debug Console - Mini Jogo LEDs"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#0F0F23">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0" Padding="15">
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
          <GradientStop Color="#667EEA" Offset="0"/>
          <GradientStop Color="#764BA2" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>
      <TextBlock Text="ðŸ”§ Console de Debug" 
                 FontSize="18" 
                 FontWeight="Bold" 
                 Foreground="White"
                 HorizontalAlignment="Center">
        <TextBlock.Effect>
          <DropShadowEffect BlurRadius="8" OffsetX="0" OffsetY="2" Color="#30000000"/>
        </TextBlock.Effect>
      </TextBlock>
    </Border>

    <!-- Debug Messages -->
    <Border Grid.Row="1" Margin="10" CornerRadius="15">
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
          <GradientStop Color="#1E1E3F" Offset="0"/>
          <GradientStop Color="#2A2A5A" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>
      <Border.Effect>
        <DropShadowEffect BlurRadius="20" OffsetX="0" OffsetY="10" Color="#15000000"/>
      </Border.Effect>
      <ScrollViewer x:Name="DebugScrollViewer" 
                    VerticalScrollBarVisibility="Auto"
                    Padding="15">
        <TextBlock x:Name="DebugTextBlock" 
                   Text="Aguardando mensagens de debug..."
                   TextWrapping="Wrap" 
                   Foreground="#E2E8F0"
                   FontFamily="Consolas"
                   FontSize="12"
                   LineHeight="18"/>
      </ScrollViewer>
    </Border>

    <!-- Controls -->
    <Border Grid.Row="2" Padding="15">
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
          <GradientStop Color="#1E1E3F" Offset="0"/>
          <GradientStop Color="#2A2A5A" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>
      <StackPanel Orientation="Horizontal" 
                  HorizontalAlignment="Center" 
                  Spacing="15">
        <Button x:Name="RefreshInfoButton" 
                Content="ðŸ”„ Atualizar Info" 
                Click="RefreshInfoButton_Click"
                Foreground="White"
                Padding="12,8"
                CornerRadius="10"
                FontWeight="Medium">
          <Button.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#805AD5" Offset="0"/>
              <GradientStop Color="#9F7AEA" Offset="1"/>
            </LinearGradientBrush>
          </Button.Background>
          <Button.Effect>
            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="3" Color="#40000000"/>
          </Button.Effect>
        </Button>
        
        <Button x:Name="ClearButton" 
                Content="ðŸ—‘ï¸ Limpar Console" 
                Click="ClearButton_Click"
                Foreground="White"
                Padding="12,8"
                CornerRadius="10"
                FontWeight="Medium">
          <Button.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#E53E3E" Offset="0"/>
              <GradientStop Color="#F56565" Offset="1"/>
            </LinearGradientBrush>
          </Button.Background>
          <Button.Effect>
            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="3" Color="#40000000"/>
          </Button.Effect>
        </Button>
        
        <Button x:Name="SaveButton" 
                Content="ðŸ’¾ Salvar Log" 
                Click="SaveButton_Click"
                Foreground="White"
                Padding="12,8"
                CornerRadius="10"
                FontWeight="Medium">
          <Button.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#38A169" Offset="0"/>
              <GradientStop Color="#48BB78" Offset="1"/>
            </LinearGradientBrush>
          </Button.Background>
          <Button.Effect>
            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="3" Color="#40000000"/>
          </Button.Effect>
        </Button>
        
        <Button x:Name="CloseButton" 
                Content="âŒ Fechar" 
                Click="CloseButton_Click"
                Foreground="White"
                Padding="12,8"
                CornerRadius="10"
                FontWeight="Medium">
          <Button.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#4FACFE" Offset="0"/>
              <GradientStop Color="#00F2FE" Offset="1"/>
            </LinearGradientBrush>
          </Button.Background>
          <Button.Effect>
            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="3" Color="#40000000"/>
          </Button.Effect>
        </Button>
      </StackPanel>
    </Border>

  </Grid>
</Window>