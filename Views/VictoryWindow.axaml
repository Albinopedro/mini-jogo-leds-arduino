<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="miniJogo.Views.VictoryWindow"
    Title="ðŸ† VITÃ“RIA - Desafio Conquistado!"
    Width="1920"
    Height="1080"
    MinWidth="1024"
    MinHeight="768"
    WindowState="FullScreen"
    WindowStartupLocation="CenterScreen"
    CanResize="False"
    Background="#1A202C"
    Topmost="True"
    ShowInTaskbar="False"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    SystemDecorations="None"
>

    <Grid>
        <!-- Background overlay -->
        <Rectangle Fill="#000000" Opacity="0.9" />

        <!-- Main content container -->
        <ScrollViewer
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto"
        >
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Victory Title -->
                <Viewbox
                    Grid.Row="0"
                    Stretch="Uniform"
                    MaxHeight="100"
                    Margin="0,15,0,25"
                >
                    <TextBlock
                        x:Name="VictoryTitle"
                        Text="ðŸ† VITÃ“RIA!"
                        FontSize="72"
                        FontWeight="Bold"
                        Foreground="#10B981"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                    />
                </Viewbox>

                <!-- Victory Message -->
                <Viewbox
                    Grid.Row="1"
                    Stretch="Uniform"
                    MaxHeight="50"
                    Margin="0,0,0,20"
                >
                    <TextBlock
                        x:Name="VictoryMessage"
                        Text="ParabÃ©ns! VocÃª conquistou o desafio!"
                        FontSize="36"
                        FontWeight="Medium"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                    />
                </Viewbox>

                <!-- Player Name -->
                <TextBlock
                    Grid.Row="2"
                    x:Name="PlayerNameText"
                    Text="ðŸ‘¤ Jogador: [Nome]"
                    FontSize="24"
                    FontWeight="Medium"
                    Foreground="#E2E8F0"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,0,0,25"
                />

                <!-- Victory Details -->
                <Border
                    Grid.Row="3"
                    Background="#065F46"
                    CornerRadius="15"
                    Padding="30"
                    MaxWidth="900"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#10B981"
                    BorderThickness="3"
                    Margin="0,15"
                >
                    <StackPanel Spacing="20">
                        <TextBlock
                            Text="ðŸŽ¯ Desafio Conquistado!"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                        />

                        <StackPanel
                            x:Name="VictoryDetailsPanel"
                            Spacing="15"
                            HorizontalAlignment="Center"
                        />
                    </StackPanel>
                </Border>

                <!-- Return Message -->
                <TextBlock
                    Grid.Row="4"
                    Text="ðŸŽ‰ Clique no botÃ£o abaixo para voltar ao menu principal"
                    FontSize="18"
                    FontWeight="Medium"
                    Foreground="#10B981"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,25,0,15"
                />

                <!-- Return Button -->
                <Button
                    Grid.Row="5"
                    x:Name="ReturnToLoginButton"
                    Content="ðŸ  Voltar ao Menu Principal"
                    FontSize="20"
                    FontWeight="Bold"
                    Padding="40,15"
                    MinWidth="300"
                    MinHeight="60"
                    Background="#10B981"
                    Foreground="White"
                    CornerRadius="12"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,15,0,30"
                    Click="ReturnToLoginButton_Click"
                >
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#059669" />
                            <Setter Property="Cursor" Value="Hand" />
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#047857" />
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
