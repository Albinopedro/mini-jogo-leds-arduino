<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="miniJogo.Views.RoundsCompletedWindow"
    Title="ðŸŽ® GAME OVER - SessÃ£o Finalizada"
    Width="1920"
    Height="1080"
    MinWidth="1024"
    MinHeight="768"
    WindowState="FullScreen"
    WindowStartupLocation="CenterScreen"
    CanResize="False"
    Background="#1A202C"
    Topmost="True"
    ShowInTaskbar="False"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    SystemDecorations="None"
>

    <Grid>
        <!-- Background overlay -->
        <Rectangle Fill="#000000" Opacity="0.9" />

        <!-- Main content container -->
        <ScrollViewer
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto"
        >
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Game Over Title -->
                <Viewbox
                    Grid.Row="0"
                    Stretch="Uniform"
                    MaxHeight="100"
                    Margin="0,15,0,25"
                >
                    <TextBlock
                        x:Name="GameOverTitle"
                        Text="ðŸŽ® GAME OVER"
                        FontSize="72"
                        FontWeight="Bold"
                        Foreground="#FF6B6B"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                    />
                </Viewbox>

                <!-- Session Complete Message -->
                <Viewbox
                    Grid.Row="1"
                    Stretch="Uniform"
                    MaxHeight="50"
                    Margin="0,0,0,20"
                >
                    <TextBlock
                        x:Name="SessionMessage"
                        Text="Sua sessÃ£o foi finalizada!"
                        FontSize="36"
                        FontWeight="Medium"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                    />
                </Viewbox>

                <!-- Player Name -->
                <TextBlock
                    Grid.Row="2"
                    x:Name="PlayerNameText"
                    Text="ðŸ‘¤ Jogador: [Nome]"
                    FontSize="24"
                    FontWeight="Medium"
                    Foreground="#E2E8F0"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,0,0,25"
                />

                <!-- Games Summary -->
                <Border
                    Grid.Row="3"
                    Background="#2D3748"
                    CornerRadius="15"
                    Padding="30"
                    MaxWidth="900"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#4A5568"
                    BorderThickness="2"
                    Margin="0,15"
                >
                    <StackPanel Spacing="20">
                        <TextBlock
                            Text="ðŸ“Š Resumo da SessÃ£o"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                        />

                        <ScrollViewer
                            x:Name="GamesSummaryScrollViewer"
                            MaxHeight="300"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto"
                            Background="Transparent"
                        >
                            <StackPanel
                                x:Name="GamesSummaryPanel"
                                Spacing="15"
                                HorizontalAlignment="Center"
                            />
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Return Message -->
                <TextBlock
                    Grid.Row="4"
                    Text="ðŸ”„ Retornando ao login em alguns segundos..."
                    FontSize="18"
                    FontWeight="Medium"
                    Foreground="#A0AEC0"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,25,0,15"
                />

                <!-- Return Button -->
                <Button
                    Grid.Row="5"
                    x:Name="ReturnToLoginButton"
                    Content="ðŸ”™ Voltar ao Login Agora"
                    FontSize="20"
                    FontWeight="Bold"
                    Padding="40,15"
                    MinWidth="300"
                    MinHeight="60"
                    Background="#4299E1"
                    Foreground="White"
                    CornerRadius="12"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,15,0,30"
                    Click="ReturnToLoginButton_Click"
                >
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#3182CE" />
                            <Setter Property="Cursor" Value="Hand" />
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#2C5282" />
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
