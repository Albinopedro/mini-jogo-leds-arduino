<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="600"
    x:Class="miniJogo.Views.ScoresWindow"
    x:CompileBindings="False"
    Title="ðŸ† Rankings e PontuaÃ§Ãµes - Mini Jogo LEDs"
    Width="800"
    Height="600"
    MinWidth="600"
    MinHeight="400"
    WindowStartupLocation="CenterOwner"
    Background="#0F0F23"
>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Grid.Row="0" Padding="20">
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
          <GradientStop Color="#667EEA" Offset="0"/>
          <GradientStop Color="#764BA2" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
          <TextBlock
                        Text="ðŸ† Rankings e PontuaÃ§Ãµes"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        VerticalAlignment="Center"
                    >
            <TextBlock.Effect>
              <DropShadowEffect BlurRadius="8" OffsetX="0" OffsetY="2" Color="#30000000"/>
            </TextBlock.Effect>
          </TextBlock>
          <Border CornerRadius="15" Padding="10,5">
            <Border.Background>
              <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#4FACFE" Offset="0"/>
                <GradientStop Color="#00F2FE" Offset="1"/>
              </LinearGradientBrush>
            </Border.Background>
            <TextBlock
                            x:Name="TotalScoresText"
                            Text="0 jogos registrados"
                            Foreground="White"
                            FontWeight="Medium"
                            FontSize="14"
                            VerticalAlignment="Center"
                        />
          </Border>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
          <Button
                        x:Name="RefreshButton"
                        Content="ðŸ”„"
                        Click="RefreshButton_Click"
                        ToolTip.Tip="Atualizar dados"
                        Width="40"
                        Height="40"
                        CornerRadius="10"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                    >
            <Button.Background>
              <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#667EEA" Offset="0"/>
                <GradientStop Color="#764BA2" Offset="1"/>
              </LinearGradientBrush>
            </Button.Background>
            <Button.Effect>
              <DropShadowEffect BlurRadius="8" OffsetX="0" OffsetY="2" Color="#40000000"/>
            </Button.Effect>
          </Button>
          <Button
                        x:Name="ExportButton"
                        Content="ðŸ“Š"
                        Click="ExportButton_Click"
                        ToolTip.Tip="Exportar dados"
                        Width="40"
                        Height="40"
                        CornerRadius="10"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                    >
            <Button.Background>
              <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#667EEA" Offset="0"/>
                <GradientStop Color="#764BA2" Offset="1"/>
              </LinearGradientBrush>
            </Button.Background>
            <Button.Effect>
              <DropShadowEffect BlurRadius="8" OffsetX="0" OffsetY="2" Color="#40000000"/>
            </Button.Effect>
          </Button>
        </StackPanel>
      </Grid>
    </Border>

    <!-- Main Content -->
    <Grid Grid.Row="1" Margin="20">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="15" />
        <ColumnDefinition Width="250" />
      </Grid.ColumnDefinitions>

      <!-- Left Panel - Scores List -->
      <Border
                Grid.Column="0"
                CornerRadius="20"
                Padding="20"
            >
        <Border.Background>
          <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#1E1E3F" Offset="0"/>
            <GradientStop Color="#2A2A5A" Offset="1"/>
          </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
          <DropShadowEffect BlurRadius="20" OffsetX="0" OffsetY="10" Color="#15000000"/>
        </Border.Effect>
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <!-- Filters -->
          <StackPanel Grid.Row="0" Spacing="15" Margin="0,0,0,20">
            <TextBlock
                            Text="ðŸ” Filtros"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#E2E8F0"
                        />

            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0">
                <TextBlock
                                    Text="Jogo:"
                                    Foreground="#E2E8F0"
                                    FontSize="12"
                                    Margin="0,0,0,5"
                                />
                <ComboBox
                                    x:Name="GameFilterComboBox"
                                    SelectionChanged="GameFilterComboBox_SelectionChanged"
                                    HorizontalAlignment="Stretch"
                                    Padding="12,8"
                                    CornerRadius="10"
                                    BorderBrush="#4FACFE"
                                    BorderThickness="2"
                                    Foreground="White"
                                >
                  <ComboBox.Background>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                      <GradientStop Color="#3A3A6B" Offset="0"/>
                      <GradientStop Color="#4A4A7B" Offset="1"/>
                    </LinearGradientBrush>
                  </ComboBox.Background>
                  <ComboBoxItem Content="Todos os jogos" Tag="" />
                  <ComboBoxItem Content="ðŸŽ¯ Pega-Luz" Tag="Pega-Luz" />
                  <ComboBoxItem
                                        Content="ðŸ§  SequÃªncia Maluca"
                                        Tag="SequÃªncia Maluca"
                                    />
                  <ComboBoxItem Content="ðŸ± Gato e Rato" Tag="Gato e Rato" />
                  <ComboBoxItem
                                        Content="â˜„ï¸ Esquiva Meteoros"
                                        Tag="Esquiva Meteoros"
                                    />
                  <ComboBoxItem Content="ðŸŽ¸ Guitar Hero" Tag="Guitar Hero" />
                  <ComboBoxItem
                                        Content="âš¡ Lightning Strike"
                                        Tag="Lightning Strike"
                                    />
                  <ComboBoxItem Content="ðŸŽ¯ Sniper Mode" Tag="Sniper Mode" />
                </ComboBox>
              </StackPanel>

              <StackPanel Grid.Column="2">
                <TextBlock
                                    Text="Jogador:"
                                    Foreground="#E2E8F0"
                                    FontSize="12"
                                    Margin="0,0,0,5"
                                />
                <ComboBox
                                    x:Name="PlayerFilterComboBox"
                                    SelectionChanged="PlayerFilterComboBox_SelectionChanged"
                                    HorizontalAlignment="Stretch"
                                    Padding="12,8"
                                    CornerRadius="10"
                                    BorderBrush="#4FACFE"
                                    BorderThickness="2"
                                    Foreground="White"
                                >
                  <ComboBox.Background>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                      <GradientStop Color="#3A3A6B" Offset="0"/>
                      <GradientStop Color="#4A4A7B" Offset="1"/>
                    </LinearGradientBrush>
                  </ComboBox.Background>
                </ComboBox>
              </StackPanel>
            </Grid>
          </StackPanel>

          <!-- Column Headers -->
          <Border
                        Grid.Row="1"
                        CornerRadius="12"
                        Padding="15,10"
                        Margin="0,0,0,10"
                    >
            <Border.Background>
              <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#3A3A6B" Offset="0"/>
                <GradientStop Color="#4A4A7B" Offset="1"/>
              </LinearGradientBrush>
            </Border.Background>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="120" />
              </Grid.ColumnDefinitions>

              <TextBlock
                                Grid.Column="0"
                                Text="#"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                            />
              <TextBlock
                                Grid.Column="1"
                                Text="Jogador"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                            />
              <TextBlock
                                Grid.Column="2"
                                Text="Jogo"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                            />
              <TextBlock
                                Grid.Column="3"
                                Text="Pontos"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                            />
              <TextBlock
                                Grid.Column="4"
                                Text="NÃ­vel"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                            />
              <TextBlock
                                Grid.Column="5"
                                Text="Tempo"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                            />
              <TextBlock
                                Grid.Column="6"
                                Text="Data"
                                Foreground="White"
                                FontWeight="Bold"
                                FontSize="12"
                            />
            </Grid>
          </Border>

          <!-- Scores List -->
          <ListBox 
            x:Name="ScoresListBox" 
            Grid.Row="2"
            Background="Transparent"
            BorderThickness="0"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemsPanel>
              <ItemsPanelTemplate>
                <VirtualizingStackPanel />
              </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Border 
                  CornerRadius="12" 
                  Padding="15,8" 
                  Margin="0,2">
                  <Border.Background>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                      <GradientStop Color="#3A3A6B" Offset="0"/>
                      <GradientStop Color="#4A4A7B" Offset="1"/>
                    </LinearGradientBrush>
                  </Border.Background>
                  <Border.Effect>
                    <DropShadowEffect BlurRadius="5" OffsetX="0" OffsetY="2" Color="#20000000"/>
                  </Border.Effect>
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="50" />
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="120" />
                      <ColumnDefinition Width="80" />
                      <ColumnDefinition Width="60" />
                      <ColumnDefinition Width="80" />
                      <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>

                    <!-- Position -->
                    <TextBlock
                      Grid.Column="0"
                      Text="{Binding PositionIcon}"
                      Foreground="{Binding PositionColor}"
                      FontWeight="Bold"
                      FontSize="12"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center" />

                    <!-- Player Name -->
                    <TextBlock
                      Grid.Column="1"
                      Text="{Binding PlayerName}"
                      Foreground="White"
                      FontSize="12"
                      VerticalAlignment="Center"
                      TextTrimming="CharacterEllipsis" />

                    <!-- Game Mode -->
                    <TextBlock
                      Grid.Column="2"
                      Text="{Binding GameMode}"
                      Foreground="#4FACFE"
                      FontSize="11"
                      VerticalAlignment="Center"
                      TextTrimming="CharacterEllipsis" />

                    <!-- Score -->
                    <TextBlock
                      Grid.Column="3"
                      Text="{Binding Score}"
                      Foreground="#00F2FE"
                      FontWeight="Bold"
                      FontSize="12"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right" />

                    <!-- Level -->
                    <TextBlock
                      Grid.Column="4"
                      Text="{Binding Level}"
                      Foreground="#B794F6"
                      FontSize="11"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center" />

                    <!-- Duration -->
                    <TextBlock
                      Grid.Column="5"
                      Text="{Binding FormattedDuration}"
                      Foreground="#68D391"
                      FontSize="11"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center" />

                    <!-- Date -->
                    <TextBlock
                      Grid.Column="6"
                      Text="{Binding FormattedDate}"
                      Foreground="#A0AEC0"
                      FontSize="10"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right" />
                  </Grid>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </Grid>
      </Border>

      <!-- Right Panel - Statistics -->
      <Border
                Grid.Column="2"
                CornerRadius="20"
                Padding="20"
            >
        <Border.Background>
          <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#1E1E3F" Offset="0"/>
            <GradientStop Color="#2A2A5A" Offset="1"/>
          </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
          <DropShadowEffect BlurRadius="20" OffsetX="0" OffsetY="10" Color="#15000000"/>
        </Border.Effect>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <StackPanel Spacing="20">
            <TextBlock
                            Text="ðŸ“Š EstatÃ­sticas"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                        />

            <!-- Top Players -->
            <Border CornerRadius="12" Padding="15">
              <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                  <GradientStop Color="#3A3A6B" Offset="0"/>
                  <GradientStop Color="#4A4A7B" Offset="1"/>
                </LinearGradientBrush>
              </Border.Background>
              <StackPanel Spacing="10">
                <TextBlock
                                    Text="ðŸ¥‡ Top 3 Jogadores"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                />
                <StackPanel x:Name="TopPlayersPanel" Spacing="8" />
              </StackPanel>
            </Border>

            <!-- Game Statistics -->
            <Border CornerRadius="12" Padding="15">
              <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                  <GradientStop Color="#3A3A6B" Offset="0"/>
                  <GradientStop Color="#4A4A7B" Offset="1"/>
                </LinearGradientBrush>
              </Border.Background>
              <StackPanel Spacing="10">
                <TextBlock
                                    Text="ðŸŽ® Por Jogo"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                />
                <StackPanel x:Name="GameStatsPanel" Spacing="5" />
              </StackPanel>
            </Border>

            <!-- Recent Activity -->
            <Border CornerRadius="12" Padding="15">
              <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                  <GradientStop Color="#3A3A6B" Offset="0"/>
                  <GradientStop Color="#4A4A7B" Offset="1"/>
                </LinearGradientBrush>
              </Border.Background>
              <StackPanel Spacing="10">
                <TextBlock
                                    Text="â° Atividade Recente"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                />
                <StackPanel x:Name="RecentActivityPanel" Spacing="5" />
              </StackPanel>
            </Border>
          </StackPanel>
        </ScrollViewer>
      </Border>
    </Grid>

    <!-- Footer -->
    <Border Grid.Row="2" Padding="20">
      <Border.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
          <GradientStop Color="#1E1E3F" Offset="0"/>
          <GradientStop Color="#2A2A5A" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>
      <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Spacing="15"
            >
        <Button
                    x:Name="ClearAllButton"
                    Content="ðŸ—‘ï¸ Limpar Tudo"
                    Click="ClearAllButton_Click"
                    Foreground="White"
                    Padding="15,10"
                    CornerRadius="12"
                    FontWeight="Medium"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                >
          <Button.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#E53E3E" Offset="0"/>
              <GradientStop Color="#F56565" Offset="1"/>
            </LinearGradientBrush>
          </Button.Background>
          <Button.Effect>
            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="3" Color="#40000000"/>
          </Button.Effect>
        </Button>

        <Button
                    x:Name="ExportCsvButton"
                    Content="ðŸ“„ Exportar CSV"
                    Click="ExportCsvButton_Click"
                    Foreground="White"
                    Padding="15,10"
                    CornerRadius="12"
                    FontWeight="Medium"
                >
          <Button.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#667EEA" Offset="0"/>
              <GradientStop Color="#764BA2" Offset="1"/>
            </LinearGradientBrush>
          </Button.Background>
          <Button.Effect>
            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="3" Color="#40000000"/>
          </Button.Effect>
        </Button>

        <Button
                    x:Name="CloseButton"
                    Content="âœ… Fechar"
                    Click="CloseButton_Click"
                    Foreground="White"
                    Padding="15,10"
                    CornerRadius="12"
                    FontWeight="Medium"
                >
          <Button.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
              <GradientStop Color="#4FACFE" Offset="0"/>
              <GradientStop Color="#00F2FE" Offset="1"/>
            </LinearGradientBrush>
          </Button.Background>
          <Button.Effect>
            <DropShadowEffect BlurRadius="10" OffsetX="0" OffsetY="3" Color="#40000000"/>
          </Button.Effect>
        </Button>
      </StackPanel>
    </Border>
  </Grid>
</Window>
